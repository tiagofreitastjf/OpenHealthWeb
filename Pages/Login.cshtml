@page
@model OpenHealthWeb.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "";

}

<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/Util.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/00dbf79896.js" crossorigin="anonymous"></script> 
</head>
<body class="h-100">
    <div class="container h-100">
        <main role="main" class="d-flex justify-content-center h-100">
            <form asp-page-handler="Print" method="post" class="row justify-content-center align-self-center">
                <div class="col-md-12 d-flex justify-content-center">
                    <div class="card">
                        <div class="row justify-content-center align-self-center pt-3"><h2 class="text-success" style="font-weight: 800;">Open Health</h2></div>
                        <div class="card-body">
                            <label class="col-form-label">E-mail</label>
                            <input asp-for="Login.Email" id="txtEmail" type="email" class="form-control" placeholder="Exemplo: joao@gmail.com" />
                            <label class="col-form-label">Senha</label>
                            <input asp-for="Login.Senha" id="txtSenha" type="password" class="form-control" />
                            <input type="radio" id="radioCliente" name="tipoUsuario" checked asp-for="Login.TipoLogin" value="Paciente"/>
                            <label for="radioCliente">Paciente</label>
                            <input type="radio" id="radioProfissional" name="tipoUsuario" asp-for="Login.TipoLogin" value="Profissional"/>
                            <label for="radioProfissional">Profissional</label>
                            <div class="col-md-12 mt-3 mb-3">
                                <a href="#">Esqueci a senha</a>
                            </div>
                            <button id="btnEntrar" type="submit" class="btn btn-success">Entrar&ensp;<i class="fas fa-sign-in-alt"></i></button>
                            <div class="col-md-12 text-center mt-3">
                                <a asp-page="/Cadastro">Não tem cadastro? Clique aqui para cadastrar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </main>
    </div>
</body>
</html>