@page
@model OpenHealthWeb.Pages.Profissional.ProntuarioModel
@{
}
<div class="container">
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Profissional</div>
                <div id="pnCliente" class="card-body">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="col-md-12 text-center">
                        <h6>Solicitar acesso</h6>
                    </div>
                    <label class="col-form-label">Digite o CPF do paciente</label>
                    <input id="txtCPF" type="text" class="form-control" placeholder="Exemplo: 123.456.789-12" />
                    <div class="col-md-12 mt-3 text-center">
                        <button id="btnSolicitar" type="button" class="btn btn-secondary">Solicitar acesso</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 mb-3">
        <div class="card">
            <div class="card-header text-center">Últimas consultas e vacinações</div>
            <div class="card-body">
                <div id="pnProntuario" class="row">
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header text-center">Prontuários</div>
            <div class="card-body">
                <div id="pnProntuarios" class="row">
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    let dados = {};

    $(document).ready(function (){
        CarregarDados();
    });

    function CarregarDados()
    {
        ajaxRequestApi(
            urlAPI + "Prontuario/GetProntuarioProfissional",
            "GET",
            {
                idProfissional: getParamByName("idProfissional")
            },
            "",
            function (data)
            {
                dados = data;
                let pn = `<div class="row">
                        <div class="col-sm">
                            <p id="lblNome">Nome: ${data.nome}</p>
                            <p id="lblNascimento">Data de nascimento: ${data.dataNascimento}</p>
                        </div>
                    </div>`;

                $("[id$=pnCliente]").empty().append(pn);
                
                pn = "";
                for (let i = 0; i < data.consulta.length; i++)
                {
                    pn += `<div class="col-sm-4 mb-3">
                        <div class="card" style="height: 190px">
                            <div class="card-body">
                                <div class="col-sm-12">
                                    <label class="txtData">${data.consulta[i].data}</label>
                                </div>    
                                <div class="col-sm-12">
                                    <label class="txtTitulo">${data.consulta[i].tipoConsulta}</label>
                                </div>
                                <div class="col-sm-12 mb-4">
                                    <label class="txtDescricao">${data.consulta[i].descricao}</label>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <button id="btnVer" type="button" class="btn btn-secondary btn-primary text-light" onclick="AcessarFicha(${data.consulta[i].id}, ${data.consulta[i].idCliente},'Consulta')">
                                        <i class="fas fa-eye"></i>&ensp;Ver
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>`;
                }

                for (let i = 0; i < data.vacina.length; i++)
                {
                    pn += `<div class="col-sm-4">
                        <div class="card" style="height: 190px">
                            <div class="card-body">
                                <div class="col-sm-12">
                                    <label class="txtData">${data.vacina[i].data}</label>
                                </div>
                                <div class="col-sm-12">
                                    <label class="txtTitulo">${data.vacina[i].tipoVacina}</label>
                                </div>
                                <div class="col-sm-12 mb-4">
                                    <label class="txtDescricao">${data.vacina[i].observacao}</label>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <button id="btnVer" type="button" class="btn btn-secondary btn-primary text-light" onclick="AcessarFicha(${data.vacina[i].id}, ${data.vacina[i].idCliente},'Vacina')">
                                        <i class="fas fa-eye"></i>&ensp;Ver
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>`;
                }

                $("[id$=pnProntuario]").empty().append(pn);

                let pnProntuarios = "";
                for (let i = 0; i < data.prontuarios.length; i++)
                {
                    pnProntuarios += `<div class="col-sm-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="col-sm-12">
                                    <button id="btnNovaConsulta" type="button" class="btn btn-secondary btn-primary text-light" onclick="NovaConsulta(${data.prontuarios[i].idCliente})">
                                        <i class="fas fa-plus"></i>&ensp;Consulta
                                    </button>
                                    <button id="btnNovaVacina" type="button" class="btn btn-secondary btn-primary text-light" onclick="NovaVacina(${data.prontuarios[i].idCliente})">
                                        <i class="fas fa-plus"></i>&ensp;Vacina
                                    </button>
                                    <button id="btnVerProntuario" type="button" class="btn btn-secondary btn-primary text-light" onclick="AcessarProntuario(${data.prontuarios[i].idCliente})">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button id="btnFechar${data.prontuarios[i].idCliente}" type="button" style="display: none;" class="btn btn-secondary btn-primary text-light" onclick="FecharProntuario(${data.prontuarios[i].idCliente})">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <label class="txtTitulo">${data.prontuarios[i].nome}</label>
                                </div>
                                <div id="pnCliente${data.prontuarios[i].idCliente}" class="row mt-3" style="display: none;">
                                </div>
                            </div>
                        </div>
                    </div>`;
                }

                $("[id$=pnProntuarios]").empty().append(pnProntuarios);
            }
        );
    }

    function AcessarFicha(id, idCliente, ficha)
    {
        if (ficha == "Consulta"){
            window.location.replace("/Profissional/FichaConsulta?id=" + id + "$idCliente=" + idCliente);
        }
        else if (ficha == "Vacina"){
            window.location.replace("/Profissional/FichaVacina?id=" + id + "$idCliente=" + idCliente);
        }
    }  

    function NovaConsulta(idCliente)
    {
        window.location.replace("/Profissional/FichaConsulta?idCliente=" + idCliente);
    }  

    function NovaVacina(idCliente)
    {
        window.location.replace("/Profissional/FichaVacina?idCliente=" + idCliente);
    }  

    $("[id$=btnSolicitar]").unbind("click").bind("click", function()
    {
        ajaxRequestApi(
            urlAPI + "Prontuario/SolicitarAcesso",
            "GET",
            {
                CPF: $("[id$=txtCPF]").val(),
                idProfissional: getParamByName("idProfissional")
            },
            "",
            function (data)
            {

            }
        );
    });
    
    function AcessarProntuario(idCliente)
    {
        let idPn = `[id$=pnCliente${idCliente}]`;
        $(idPn).empty();
        //Consultas
        ajaxRequestApi(
            urlAPI + "Consulta/Clinica",
            "GET",
            {
                idCliente: idCliente,
                idProfissional: getParamByName("idProfissional")
            },
            "",
            function (data)
            {
                let pn = "";
                for (let i = 0; i < data.length; i++)
                {
                    pn += `<div class="col-sm-4 mb-3">
                        <div class="card" style="height: 190px">
                            <div class="card-body">
                                <div class="col-sm-12">
                                    <label class="txtData">${data[i].data}</label>
                                </div>
                                <div class="col-sm-12">
                                    <label class="txtTitulo">${data[i].tipoConsulta}</label>
                                </div>
                                <div class="col-sm-12 mb-4">
                                    <label class="txtDescricao">${data[i].descricao}</label>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <button id="btnVer" type="button" class="btn btn-secondary btn-primary text-light" onclick="AcessarFicha(${data[i].id}, ${data[i].idCliente},'Consulta')">
                                        <i class="fas fa-eye"></i>&ensp;Ver
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>`;

                    $(idPn).append(pn);
                }
            }
        );

        //Vacinas
        ajaxRequestApi(
            urlAPI + "Vacina/Clinica",
            "GET",
            {
                idCliente: idCliente,
                idProfissional: getParamByName("idProfissional")
            },
            "",
            function (data)
            {
                let pn = "";
                for (let i = 0; i < data.length; i++)
                {
                    pn += `<div class="col-sm-4 mb-3">
                        <div class="card" style="height: 190px">
                            <div class="card-body">
                                <div class="col-sm-12">
                                    <label class="txtData">${data[i].data}</label>
                                </div>
                                <div class="col-sm-12">
                                    <label class="txtTitulo">${data[i].tipoVacina}</label>
                                </div>
                                <div class="col-sm-12 mb-4">
                                    <label class="txtDescricao">${data[i].observacao}</label>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <button id="btnVer" type="button" class="btn btn-secondary btn-primary text-light" onclick="AcessarFicha(${data[i].id}, ${data[i].idCliente},'Vacina')">
                                        <i class="fas fa-eye"></i>&ensp;Ver
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>`;

                    $(idPn).append(pn);
                }
            }
        );

        $(idPn).show();
        let idBtn =  `[id$=btnFechar${idCliente}]`;
        $(idBtn).show();
    }

    function FecharProntuario(id)
    {
        let idPn = `[id$=pnCliente${id}]`;
        $(idPn).hide();
        let idBtn =  `[id$=btnFechar${id}]`;
        $(idBtn).hide();
    }
</script>
